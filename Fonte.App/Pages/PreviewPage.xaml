<Page
    x:Class="Fonte.App.PreviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Fonte.App.Controls"
    xmlns:local="using:Fonte.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="TextBox" IsSpellCheckEnabled="False" TextChanged="OnTextChanged"/>
        <controls:PreviewCanvas x:Name="Canvas" Grid.Row="1"/>
    </Grid>
</Page>
