<TextBox
    x:Class="Fonte.App.Controls.DesignCanvasParts.AnchorNameTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fonte.App.Controls.DesignCanvasParts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontSize="12"
    Height="24"
    Width="78"
    Visibility="Collapsed"
    KeyDown="OnKeyDown"
    LostFocus="OnLostFocus">
    <TextBox.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Microsoft.UI.Xaml/DensityStyles/Compact.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="local:AnchorNameTextBox">
                <Setter Property="Template" Value="{StaticResource SimpleTextBoxTemplate}"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>
        </ResourceDictionary>
    </TextBox.Resources>
</TextBox>
